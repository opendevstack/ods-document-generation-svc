<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %yellow(%logger{36}) - %msg%throwable%n</pattern>
    </encoder>
  </appender>

  <logger name="org.ods" level="${ODS_LOG_LEVEL:-DEBUG}" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="com.github.tomakehurst.wiremock" level="INFO" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <root  name="org.ods"  level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>